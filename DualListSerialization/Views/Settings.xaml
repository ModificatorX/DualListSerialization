<Window x:Class="DualListSerialization.Views.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Properties="clr-namespace:DualListSerialization.Properties"
        mc:Ignorable="d"
        Title="Settings" Height="95" Width="250"
        WindowStartupLocation="CenterOwner">
    <StackPanel Margin="15,15,15,6">

        <CheckBox Content="Use text input" 
                  IsChecked="{Binding Source={x:Static Properties:Settings.Default},
                    Path=UseTextInput,
                    UpdateSourceTrigger=PropertyChanged}"></CheckBox>



        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Save"
                    Width="90"
                    Click="Save_Click"/>


        </StackPanel>

    </StackPanel>
</Window>
